@model Receituario;
@using Hsf_Receitas.Models;
@using Hsf_Receitas.Data;

@{
    ViewData["title"] = "Completar Receituário";

    Medicacao medic = new Medicacao();
    HSFContext database = new HSFContext();

    List<Medicacao> medicList = database.Medicamentos.Where(m => m.ReceituarioId ==Model.Id).ToList();

    List<Receituario> prescriptionList = database.Receitas.Where(m => m.Id == Model.Id).ToList();

    int medicIdPrint = @Model.Id;
}

<div class="prescription container-fluid">

    <div class="card card-prescription mb-4 p-0 col-md-6">

        <div class="card-header text-light">

            <h1 class="text-center">Receituário</h1>

        </div>

        <div class="card-body">

            <div class="receita">

                <form id="up-receita-form" class="prescription-form">

                    <span class="mt-3 mb-3 alerta"></span>

                    <div class="card medicine-card">

                        <h5 class="card-header">Informações básicas :</h5>

                        <div class="row medicine-card-2">

                            <div class="card-body card-body-edit-prescription col-md-8">

                                <input id="up-prescriptionId" class="form-control mb-3" type="hidden" asp-for="Id" disabled>

                                <label class="text-primary" for="">Nome do Paciente: </label>
                                <input type="text" id="up-pacientName" class="form-control border-primary mb-3" asp-for="PacientName" required>

                                <label class="text-primary" for="">Nome do Médico: </label>
                                <input type="text" id="up-doctorName" class="form-control border-primary mb-3" asp-for="DoctorName" required>

                                <label class="text-primary" for="">Data da consulta: </label>
                                <input type="date" id="up-dataAppoiment" class="form-control border-primary mb-3" asp-for="DateOfMedicalAppoiment" required>

                                <p class="text-danger">Salve as alterações antes de imprimir.</p>

                            </div>

                            <div class="edit-button col-md-3">
                                <button type="submit" class="btn btn-md btn-primary">Salvar</button>
                            </div>

                        </div>

                    </div>

                    <div class="card medicine-card">

                        <h5 class="card-header">Medicações :</h5>

                        <div class="card-body">

                            <p class="text-info ml-3">Agora você pode adicionar medicamentos!</p>

                            <div class="col-md-12 mt-3">
                                @await Html.PartialAsync("/Views/Medicacao/_ListaDeMedicacao.cshtml", @medicList)
                            </div>

                            <button type="button" data-toggle="modal" data-target="#medication-modal-@Model.Id" title="Inserir medicamentos à receita" onclick=" inserirRemedios()" class="btn btn-md btn-info btn-printer ml-3"> <span class="material-symbols-outlined"> syringe </span> Adicionar Medicamentos</button>

                        </div>

                    </div>

                    <a href="/Receituario/PrescriptionPrintToPDF?id=@Model.Id" target="_blank" title="Imprimir receituário" class="btn btn-md btn-secondary btn-printer-edit mt-3" href=""><span class="material-symbols-outlined"> print </span> Imprimir </a>

                </form>

            </div>
        </div>

    </div>

    @if (prescriptionList.Count() > 0)
    {
        <div class=" show-prescription">

        <div class="header-show-prescription">

            <div class="header-img">

                <img src="../images/logotipo-hospital-sao-francisco.png" alt="logotipo da vizualização do receituário comum">

            </div>

            <div class="show-logo">

                <h1>RECEITUÁRIO</h1>
                <h2 style="text-decoration: underline 2px solid #007bff;">FUNDAÇÃO DE SAÚDE TRÊS MARIAS</h2>
                <h2>HOSPITAL SÃO FRANCISCO</h2>

            </div>

        </div>
        
        <div class="show-body">
            @foreach (var item in prescriptionList)
            {
                <div class="prescription-data">

                    <div class="inputs"><p class="m-0 p-0">NOME DO PACIENTE :</p><span class="content">@item.PacientName</span></div>
                    <div class="inputs"><p class="m-0 p-0">DATA DO ATENDIMENTO :</p><span class="content">@item.DateOfMedicalAppoiment.ToString("dd/MM/yyyy")</span></div>
                    <div class="inputs"><p class="m-0 p-0">NOME DO MÉDICO :</p><span class="content">@item.DoctorName</span></div>

                </div>
            }
            <div class="medicacoes">

                <h3 class="text-center text-primary font-weight-bold">MEDICAMENTOS :</h3>

                <table class="text-primary table-medicament" id="medic-list">

                    <thead class="text-primart text-center font-weight-bold border-medic">

                        <tr>

                            <th class="border-medic p-1">NOME</th>
                            <th class="border-medic p-1">DOSAGEM</th>
                            <th class="border-medic p-1">USO</th>
                            <th class="border-medic p-1">TEMPO-(Dias)</th>
                            <th class="border-medic p-1">A CADA-(Hrs)</th>

                        </tr>

                    </thead>

                    <tbody class="text-center">

                        @foreach (var item in medicList)
                        {
                            <tr class="border-medic">

                                <td class="text-center class="border-medic"">@item.MedicationName</td>

                                <td class="border-medic">@item.MedicationDosage</td>

                                <td class="border-medic">@item.MedicationMethodUse</td>

                                <td class="border-medic">@item.UseTime - dias</td>

                                <td class="border-medic">À cada @item.DoseTime - horas</td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>

        </div>
        
        <div class="show-footer">
            <P>BR 040 - KM 438 - BEASÍLIA / BELO HORIZONTE - TEL.: (38) 3754-12-56</P>
            <p><span>PARQUE DIADORIM</span> - CEP: 39205-000 - TRÊS MARIAS - MINAS GERAIS</p>
            <div class="line"></div>
        </div>

    </div>

    }else {
        <div class="alert alert-warning w-100 text-center alert-medication" role="alert">
            Não existe uma receita para mostrar !
        </div>
    }

</div>

<!--Start Medication Modal-->

<div class="modal fade" id="medication-modal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="registerUserTitle" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered modal-md" role="document">

        <div class="modal-content">

            <div class="modal-header text-center">

                <h2 class="text-center mb-0"> Inserir Medicamento</h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                    <span aria-hidden="true">&times;</span>

                </button>

            </div>

            <div class="modal-body p-0">
                @await Html.PartialAsync("/Views/Medicacao/_MedicationRegister.cshtml", @medic)
            </div>

        </div>

    </div>

</div>

<!--Finish Medication Modal-->