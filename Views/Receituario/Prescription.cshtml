@model Receituario;
@using Hsf_Receitas.Models;

@{
    ViewData["title"] = "Gerar Receituário";
}

<div class="prescription container-fluid">

    <div class="card card-prescription mb-4 col-md-6 p-0">

        <div class="card-header text-light">

            <h1 class="text-center">Receituário</h1>

        </div>

        <div class="card-body">

            <div class="receita">

                <form id="receita-form" class="prescription-form">

                    <span class="mt-3 mb-3 alerta" ></span>

                    <div class="card medicine-card">

                        <h5 class="card-header">Informações básicas :</h5>

                        <div class="card-body card-body-edit-prescription">

                            <input id="prescriptionId" class="form-control mb-3" type="hidden" asp-for="Id" disabled>

                            <label class="text-primary" for="">Nome do Paciente: </label>
                            <input type="text" id="pacientName" class="form-control border-primary mb-3 prescription-input" asp-for="PacientName" onblur="ShowPrescription()" required>

                            <label class="text-primary" for="">Nome do Médico: </label>
                            <input type="text" id="doctorName" class="form-control border-primary mb-3 prescription-input" asp-for="DoctorName" onblur="ShowPrescription()" required>

                            <label class="text-primary" for="">Data da consulta: </label>
                            <input type="date" id="dataAppoiment" class="form-control border-primary prescription-input" asp-for="DateOfMedicalAppoiment" onblur="ShowPrescription()" required>

                        </div>

                    </div>

                    <div class="card medicine-card">

                        <h5 class="card-header">Medicações :</h5>

                        <div class="card-body">

                            <p class="text-danger">Salve a receita para inserir medicamentos.</p>

                            <button target type="button" title="Salve a receita para adicionar medicamentos." class="btn btn-md btn-info btn-printer medic-btn" disabled>
                            <span class="material-symbols-outlined"> syringe </span> Adicionar Medicamentos </button>

                        </div>

                    </div>

                    <button type="submit" title="Gerar Receita" class="btn btn-md btn-primary btn-printer mt-3"> <span class="material-symbols-outlined"> save </span> Salvar </button>

                </form>

            </div>

        </div>

    </div>

    <div class="card show-prescription">

        <div class="header-show-prescription">

            <div class="header-img">

                <img src="../images/logotipo-hospital-sao-francisco.png" alt="logotipo da vizualização do receituário comum">

            </div>

            <div class="logo">

                <h1>RECEITUÁRIO</h1>
                <h2 style="text-decoration: underline 2px solid #007bff;">FUNDAÇÃO DE SAÚDE TRÊS MARIAS</h2>
                <h2>HOSPITAL SÃO FRANCISCO</h2>

            </div>

        </div>

        <div class="show-body">

            <div class="prescription-data">

                <div class="inputs"><p class="m-0 p-0">NOME DO PACIENTE :</p><span class="content" id="nameP"></span></div>
                <div class="inputs"><p class="m-0 p-0">DATA DO ATENDIMENTO :</p><span class="content" id="dataA"></span></div>
                <div class="inputs"><p class="m-0 p-0">NOME DO MÉDICO :</p><span class="content" id="nameM"></span></div>

            </div>

            <div class="medicacoes">
                <h3 class="text-center text-primary font-weight-bold">MEDICAMENTOS :</h3>
            </div>

        </div>

        <div class="show-footer">
            <P>BR 040 - KM 438 - BEASÍLIA / BELO HORIZONTE - TEL.: (38) 3754-12-56</P>
            <p><span>PARQUE DIADORIM</span> - CEP: 39205-000 - TRÊS MARIAS - MINAS GERAIS</p>
            <div class="line"></div>
        </div>

    </div>

</div>